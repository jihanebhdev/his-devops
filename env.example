# ============================================================================
# HIS DevOps - Environment Variables
# Copy this file to .env and update values
# ============================================================================

# Environment
ENVIRONMENT=dev

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=his_db
MYSQL_USER=his_user
MYSQL_PASSWORD=his_password
MYSQL_PORT=3306

# Hub Backend Configuration
HUB_PORT=8080
SPRING_PROFILE=dev
JWT_SECRET=your-secret-key-change-in-production-minimum-32-characters
JWT_EXPIRATION=86400000

# Front React Configuration
FRONT_PORT=3000
REACT_APP_API_URL=http://localhost:8080/api

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_URL=http://localhost:3001

# AlertManager Configuration
ALERTMANAGER_PORT=9093

# SonarQube Configuration (for CI/CD)
SONAR_HOST_URL=http://localhost:9000
SONAR_TOKEN=your-sonarqube-token

# GitHub Container Registry (for CI/CD)
GHCR_USERNAME=your-github-username
GHCR_TOKEN=your-github-token

